{
  "name": "ccmemory",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "bin": {
    "ccmemory": "./dist/cli/index.js"
  },
  "scripts": {
    "test": "bun test",
    "test:db": "bun test tests/db/",
    "test:memory": "bun test tests/services/memory/",
    "test:search": "bun test tests/services/search/",
    "test:embedding": "bun test tests/services/embedding/",
    "test:docs": "bun test tests/services/documents/",
    "test:mcp": "bun test tests/mcp/",
    "test:cli": "bun test tests/cli/",
    "test:webui": "bun test tests/webui/",
    "build": "bun build src/cli/index.ts --outdir dist/cli --target bun && bun build src/mcp/server.ts --outdir dist/mcp --target bun",
    "build:hooks": "bun build scripts/capture.ts scripts/summarize.ts scripts/cleanup.ts --outdir dist/scripts --target bun",
    "build:all": "bun run build && bun run build:hooks",
    "dev:cli": "bun src/cli/index.ts",
    "dev:mcp": "bun src/mcp/server.ts",
    "dev:serve": "bun src/cli/index.ts serve",
    "health": "bun src/cli/index.ts health",
    "stats": "bun src/cli/index.ts stats",
    "db:tables": "sqlite3 ~/.local/share/ccmemory/memories.db '.tables'",
    "db:schema": "sqlite3 ~/.local/share/ccmemory/memories.db '.schema'",
    "db:wal": "sqlite3 ~/.local/share/ccmemory/memories.db 'PRAGMA journal_mode'",
    "db:counts": "sqlite3 ~/.local/share/ccmemory/memories.db 'SELECT (SELECT COUNT(*) FROM memories) as memories, (SELECT COUNT(*) FROM memory_vectors) as vectors, (SELECT COUNT(*) FROM documents) as docs'",
    "ollama:check": "curl -s http://localhost:11434/api/tags | jq -r '.models[].name'",
    "ollama:pull": "ollama pull qwen3-embedding",
    "typecheck": "tsc --noEmit",
    "lint": "bun run typecheck"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@anthropic-ai/claude-agent-sdk": "^0.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "typescript": "^5.0.0",
    "prettier": "^3.8.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
